<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Shoe Store</title>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="/scripts/login.js"></script>
    <script src="/scripts/product.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/home.css">
    <link rel="stylesheet" href="/css/shoes-page.css">
</head>
<body>
    <div id="page-container">
        <header>
            <%- include('partials/header') %>
        </header>

        <main id="content-wrap">
            <%- include('partials/hero') %>
            <div class="hero-images">
                <a href="/women"><img src="video/black-girl.png" alt="Image 1"></a>
                <a href="/men"><img src="video/n2.jpg" alt="Image 2"></a>
                <a href="/kids"><img src="video/n4.jpg" alt="Image 4"></a>
                <a href="/women"><img src="video/n5.jpg" alt="Image 5"></a>
            </div>
            <div id="shoes-section">
                <%- include('partials/feature-product') %>
            </div>
            <div class="footer-video">
                <video id="myVideo" autoplay muted loop>
                    <source src="../video/footer video.mp4" type="video/mp4">
                    Your browser does not support HTML5 video.
                </video>
            </div>
        </main>
        <%- include('partials/model') %>
        <footer id="mainFooter">
            <%- include('partials/footer') %>
        </footer>
    </div>
    <script>
        $(document).ready(function() {
    $('#shopNowButton').click(function(event) {
        event.preventDefault(); // כדי למנוע את פעולת ברירת המחדל של הקישור
        $('html, body').animate({
            scrollTop: $('#shoes-section').offset().top
        }, 1000); // הזמן ב-1000 מייצג את משך האנימציה במילישניות
    });
});

    </script>
</body>
</html>